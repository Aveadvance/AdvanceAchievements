<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<security:authentication-manager>
		<security:authentication-provider user-service-ref="customUserDetailsService">
		<security:password-encoder ref="encoder"></security:password-encoder>
		</security:authentication-provider>
	</security:authentication-manager>
	
	<security:http use-expressions="true">
		<security:access-denied-handler error-page="/access-denied-page"/>
		<security:intercept-url pattern="/" access="isAuthenticated()"/>
		<security:intercept-url pattern="/personal-tasks-page" access="isAuthenticated()"/>
		<security:intercept-url pattern="/create-task-page" access="isAuthenticated()"/>
		<security:intercept-url pattern="/create-task-page/*" access="isAuthenticated()"/>
		<security:intercept-url pattern="/update-task-page" access="isAuthenticated()"/>
		<security:intercept-url pattern="/update-task-category-page" access="isAuthenticated()"/>
		<security:intercept-url pattern="/complete-task" access="isAuthenticated()"/>
		<security:intercept-url pattern="/newtask" access="isAuthenticated()"/>
		<security:intercept-url pattern="/deleteusertask" access="isAuthenticated()"/>
		<security:intercept-url pattern="/updateusertask" access="isAuthenticated()"/>
		<security:intercept-url pattern="/create-task-category-page" access="isAuthenticated()"/>
		<security:intercept-url pattern="/newtaskcategory" access="isAuthenticated()"/>
		<security:intercept-url pattern="/deletetaskcategory" access="isAuthenticated()"/>
		<security:intercept-url pattern="/create-project-page" access="isAuthenticated()"/>
		<security:intercept-url pattern="/update-project-page" access="isAuthenticated()"/>
		<security:intercept-url pattern="/newproject" access="isAuthenticated()"/>
		<security:intercept-url pattern="/deleteproject" access="isAuthenticated()"/>
		<security:intercept-url pattern="/static/**" access="permitAll"/>
		<security:intercept-url pattern="/login" access="permitAll"/>
		<security:intercept-url pattern="/logout" access="permitAll"/>
		<security:intercept-url pattern="/create-account" access="permitAll"/>
		<security:intercept-url pattern="/newaccount" access="permitAll"/>
		<security:intercept-url pattern="/createinitialworkspace" access="permitAll"/>
		<security:intercept-url pattern="/access-denied-page" access="permitAll"/>
		<security:intercept-url pattern="/persistence-exception-page" access="permitAll"/>
		<security:intercept-url pattern="/**" access="denyAll"/>
		<security:form-login login-page="/login" authentication-success-forward-url="/" authentication-failure-url="/login?exception"/>
		<security:logout logout-success-url="/"/>
	</security:http>
	
	<bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
		<constructor-arg name="strength" value="11" />
	</bean>

</beans>
